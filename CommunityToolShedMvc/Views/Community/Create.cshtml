@model CommunityToolShedMvc.ViewModels.CommunityOwnerTypes
@{
    ViewBag.Title = "Create Community";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group row">
        <div class="col-xs-3 ml-3">
            @Html.LabelFor(m => m.Person.Email)
            @Html.TextBoxFor(m => m.Person.Email, new { @class = "form-control",  disabled = "true" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3 ml-3">
            @Html.LabelFor(m => m.Community.Name)
            @Html.TextBoxFor(m => m.Community.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3 ml-3">
            @Html.LabelFor(m => m.Community.TypeID)
            @Html.DropDownListFor(m => m.Community.TypeID, Model.TypeSelectList, new { @class = "form-control" })
        </div>
    </div>

    <div>
        <button type="submit" class="btn btn-success btn-lg">Submit</button>
    </div>
}
<br />
<p>@Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-danger btn-lg"} )</p>