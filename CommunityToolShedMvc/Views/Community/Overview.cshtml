@model CommunityToolShedMvc.Models.Community

@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

@if (Model.OwnerID != (((CommunityToolShedMvc.Security.CustomPrincipal)User).Person.Id)){
    <p>The owner of this community is @Model.OwnerName.</p>
}
@if (Model.OwnerID == (((CommunityToolShedMvc.Security.CustomPrincipal)User).Person.Id))
{
    <p>You are the owner of this community.</p>
}
